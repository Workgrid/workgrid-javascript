{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "baseUrl":".",
    "paths": {            
      "utils/*": [ "packages/utils/*" ],                     
      "logger": [ "packages/utils/logger" ],
      "utils": [ "packages/utils" ],  
      "client" : ["packages/client/src/client"]
    },
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  }
}
