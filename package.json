{
  "private": true,
  "name": "workgrid-javascript",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "eslint --fix '**/*.{js,ts}' --ignore-path .gitignore",
    "unit": "jest --coverage",
    "test": "yarn lint && yarn unit",
    "build": "wsrun --stages --fast-exit --exclude-missing --collect-logs build",
    "format": "prettier --write '**/*.{json,yml,md}' --ignore-path .gitignore",
    "release": "wsrun --stages --fast-exit --collect-logs --bin node $PWD/scripts/release.js",
    "pretest": "yarn build",
    "precommit": "yarn version-check && lint-staged",
    "prerelease": "yarn version-check",
    "version-check": "node ./scripts/version-check.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Workgrid/workgrid-javascript"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@microsoft/api-documenter": "^7.3.1",
    "@microsoft/api-extractor": "^7.3.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "chalk": "^2.4.2",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-prettier": "^3.1.0",
    "execa": "^2.0.4",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-junit": "^7.0.0",
    "lint-staged": "^9.2.3",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "semver": "^6.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "wsrun": "^5.0.0"
  },
  "eslintConfig": {
    "extends": [
      "./eslint.config.js"
    ]
  },
  "license": "ISC"
}
