{
  "name": "@workgrid/microapp",
  "version": "0.10.6",
  "main": "dist/microapp.js",
  "types": "dist/microapp.d.ts",
  "unpkg": "dist/microapp.umd.js",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "clean": "rm -rf dist docs temp",
    "build": "yarn clean && rollup -c",
    "prepack": "yarn api:extract && yarn api:document",
    "type-check": "tsc --noEmit",
    "api:extract": "api-extractor run",
    "api:document": "api-documenter markdown -i temp -o docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Workgrid/workgrid-javascript"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.0",
    "@workgrid/courier": "^0.7.7",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.11",
    "ms": "^2.1.1",
    "p-any": "^3.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/ms": "^0.7.31"
  },
  "eslintConfig": {
    "extends": [
      "./eslint.config.js"
    ]
  },
  "license": "Apache-2.0"
}
