{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "types": [
        "node",
        "jest"
      ],
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts",
      "dist"
    ]
  }
  